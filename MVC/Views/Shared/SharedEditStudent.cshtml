@{
    ViewBag.Title = "Edit Student";
    var id = ViewBag.Id;
}
<h3>Edit Student</h3>


<div id="divStudentEdit">

    <table>
        <tr>
            <td>Id</td>
            <td data-bind="text: id"></td>
        </tr>
        <tr>
            <td>SSN</td>
            <td><input data-bind="value: ssn" /></td>
        </tr>
        <tr>
            <td>First</td>
            <td><input data-bind="value: first" /></td>
        </tr>
        <tr>
            <td>Last</td>
            <td><input data-bind="value: last" /></td>
        </tr>
        <tr>
            <td>Email</td>
            <td><input data-bind="value: email" /></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input type="password" data-bind="value: password" /></td>
        </tr>
        <tr>
            <td>Shoe Size</td>
            <td><input data-bind="value: shoesize" /></td>
        </tr>
        <tr>
            <td>Weight</td>
            <td><input data-bind="value: weight" /></td>
        </tr>
        <tr>
            <td>Major</td>
            <td><input data-bind="value: major" /></td>
        </tr>
        <tr>
            <td></td>
            <td><button data-bind="click: add">Add</button></td>
        </tr>
    </table>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var viewModel = new StudentViewModel();
        viewModel.LoadEdit('@id');
    });
</script>