@{
    ViewBag.Title = "GetCourseListStaff";
    var id = ViewBag.Id;
}

<h3>Course List Page</h3>
<a href="/Staff/Index"><< back</a>
<div id="divCourseListStaff">
    <table>
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: viewModel">
            <tr>
                <td data-bind="text: title"></td>
                <td data-bind="text: description"></td>
                <td>
                    <!-- Note, this is an example using knockout templating. $data is the keyword
                        to for each element of the viewModel array -->
                    <a data-bind="attr: { href : '/Admin/Prereqs?id='+id, title: 'prereqs' }">Prereqs</a>
                    <a data-bind="attr: { href : '/Admin/EditCourse?id='+id, title: 'edit' }">Edit</a>
                    <a data-bind="DeleteCourse: $data">Delete</a>
                </td>
            </tr>
        </tbody>
    </table>
    <a data-bind="attr: { href : '/Admin/CreateCourse', title: 'create' }">Add new course</a>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var courseListViewObj = new CourseListViewModel();
        courseListViewObj.LoadByStaff(@id);
    });
</script>
