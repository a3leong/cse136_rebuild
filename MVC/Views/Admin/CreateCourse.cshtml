@{
    ViewBag.Title = "CreateCourse";
}

<h3>Create a new course</h3>
<div id="divCreateCourses">
    <table>
        <tr>
            <td>Course Id:</td>
            <td><input data-bind="value: id" /></td>
        </tr>
        <tr>
            <td>Course Title:</td>
            <td><input data-bind="value: title" /></td>
        </tr>
        <tr>
            <td>Course Level:</td>
            <td><input data-bind="value: level" /></td>
        </tr>
        <tr>
            <td>Description:</td>
            <td><input data-bind="value: description" /></td>
        </tr>
        <tr>
            <td></td>
            <td><button data-bind="click: add">Add</button></td>
        </tr>
    </table>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var courseView = new CourseListViewModel();
        courseView.HelpCreateCourse();
    });
</script>
