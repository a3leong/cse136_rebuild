@{
    ViewBag.Title = "EditMajor";
    var id = ViewBag.id;
}
<h2>Edit Major</h2>

<div id="divMajorListEdit">
    <table>
        <thead>
            <tr>
                <th>Major Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: viewModel">
            <tr>
                <td data-bind="text: FullName"></td>
                <td data-bind="text: Description"></td>
            </tr>
        </tbody>
    </table>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var viewModel = new MajorListViewModel();
        viewModel.Load();
    });

</script>
