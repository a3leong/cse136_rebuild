@{
    ViewBag.Title = "MajorRequirements";
    var id = ViewBag.id;
    var name = ViewBag.name;
}

<h3>@ViewBag.name Course Requirements</h3>

<div id="divMajorRequirementListContent">
    <table style="width:80%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: viewModel">
            <tr>
                <td data-bind="text: courseid"></td>
                <td data-bind="text: coursename"></td>
                <td data-bind="text: coursedescription"></td>
                <td><a data-bind="click:deleterequirement">Delete</a></td>
            </tr>
        </tbody>
    </table>
</div>
<div id="divMajorAddRequirement">
    <span>
        <label>Add Requirement to @ViewBag.name:</label>
        <select data-bind="options: availablecourses,
                           optionsText: 'title',
                           value: selectedcourse"></select>
        <button data-bind="click:createrequirement">Add</button>
    </span>
</div>
    
<script type="text/javascript">
    $(document).ready(function () {
        var viewModel = new MajorViewModel();
        viewModel.LoadMajorRequirements(@id);
    });

</script>
