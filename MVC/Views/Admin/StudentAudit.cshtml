@{
    ViewBag.Title = "StudentAudit";
    var id = ViewBag.id;
}

<h3>Student List Page</h3>

<h4>Student Info</h4>
<div id="divStudentAuditStudentInfo">
    <table style="width:80%">
        <thead>
            <tr>
                <th>Id</th>
                <th>First</th>
                <th>Last</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td data-bind="text: viewModel.id"></td>
                <td data-bind="text: viewModel.first"></td>
                <td data-bind="text: viewModel.last"></td>
                <td data-bind="text: viewModel.email"></td>
            </tr>
        </tbody>
    </table>
</div>
<br />
<h4>Courses Completed</h4>
<div id="divStudentAuditCoursesPassed">
    <table style="width:50%">
        <thead>
            <tr>
                <th>id</th>
                <th>title</th>
                <th>description</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: viewModel">
            <tr>
                <td data-bind="text: id"></td>
                <td data-bind="text: title"></td>
                <td data-bind="text: description"></td>
            </tr>
        </tbody>
    </table>
</div>
<br />
<h4>Courses Remaining</h4>
<div id="divStudentAuditCoursesLeft">
    <table style="width:50%">
        <thead>
            <tr>
                <th>id</th>
                <th>title</th>
                <th>description</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: viewModel">
            <tr>
                <td data-bind="text: id"></td>
                <td data-bind="text: title"></td>
                <td data-bind="text: description"></td>
            </tr>
        </tbody>
    </table>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var studentViewModelObj = new StudentViewModel();
        studentViewModelObj.GetStudentAudit("@id");
    });
</script>
