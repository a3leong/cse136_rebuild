@{
    ViewBag.Title = "ManageStaff";
}
<h2>Manage Staff</h2>
<div id="divEditStaff">
    <table>
        <thead>
            <tr>
                <th>Staff ID</th>
                <th>Staff Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: viewModel">
            <tr>
                <td data-bind="text: id"></td>
                <td data-bind="text: email"></td>
                <td>
                    <!-- Note, this is an example using knockout templating. $data is the keyword
                        to for each element of the viewModel array -->
                    <div data-bind="template: { name: 'action-template', data: $data}"></div>
                </td>
            </tr>
        </tbody>
    </table>
    <a data-bind="attr: { href : '/Staff/CreateStaff', title: 'create' }">Add new instructor</a>
</div>

<script type="text/html" id="action-template">
    <!-- in the template, $data is each element of the viewModel which contains "id" -->
    <a data-bind="attr: { href : '/Staff/?id=' + id, title: 'detail' }">detail</a>
    <a data-bind="attr: { href : '/Staff/EditStaff?id=' + id, title: 'edit' }">edit</a>
    <a data-bind="DeleteStaff: $data">delete</a>
    <a data-bind="DeleteStaffAsync: $data">delete async</a>
</script>

<script type="text/javascript">
    $(document).ready(function () {
        var staffViewModelObj = new StaffViewModel();
        staffViewModelObj.Load();
    });
</script>
