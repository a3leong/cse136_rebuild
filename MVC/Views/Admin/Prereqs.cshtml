@{
    ViewBag.Title = "Prequisites";
    var id = ViewBag.id;
}

<h3>Prerequisite Courses</h3>

<div id="divCoursePrereqs">
    <table>
        <thead>
            <tr>
                <th>Prerequisite Courses</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: viewModel">
            <tr>
                <td data-bind="text: title"></td>
                <td><div data-bind="template: { name: 'action-template', data: $data}"></div></td>
            </tr>
        </tbody>
    </table>
</div>
<div id="divCoursePrereqsAdd">
    <h4>Add a new prereq</h4>
    <span>
        <label>Child course:</label>
        <select data-bind="options: availablecourses,
                           optionsText: 'title',
                           value: selected"></select>
    </span>
    <button data-bind="click:createprereq">Add</button>
</div>

<script type="text/html" id="action-template">
    <!-- in the template, $data is each element of the viewModel which contains "id" -->
    <a data-bind="attr: { href : '/Admin/Prereqs?='+id, title: 'remove' }">Remove</a>
</script>

<script type="text/javascript">
    $(document).ready(function () {
        var courseViewModelObj = new CourseListViewModel();
        courseViewModelObj.LoadPrereqs(@id);
    });
</script>
